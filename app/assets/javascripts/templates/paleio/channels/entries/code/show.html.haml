%td{ :style => 'vertical-align:top;width:35px;' }
  <%= moment(model.get('timestamp')).format('HH:mm') %>
%td{ :style => 'font-weight:bold;vertical-align:top;white-space:nowrap;' }
  <%= model.get('nick') %>
%td.input{ :style => 'vertical-align:top;padding-left:10px;width:100%;' }<
  <% var prettyCode = model.get('code').replace(/  /g, '&nbsp;&nbsp;') %>
  %pre{ :style => '' }<
    %code{ :style => 'font-size:11px;border:1px solid #ddd;border-radius:3px;box-shadow: 0px 3px 4px #eee;' }<
      <%= prettyCode %>